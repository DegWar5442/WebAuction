@model WebApplication1.Models.Lot

<div class="container mt-5">
    <h1 class="display-4 text-center">Додати лот</h1>
    <form asp-action="AddLot">
        <div class="form-group">
            <label asp-for="Description">Опис</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MinPrice">Мінімальна ціна</label>
            <input asp-for="MinPrice" class="form-control" />
            <span asp-validation-for="MinPrice" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BuyoutPrice">Ціна викупу</label>
            <input asp-for="BuyoutPrice" class="form-control" />
            <span asp-validation-for="BuyoutPrice" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CurrentBid">Початкова ставка</label>
            <input asp-for="CurrentBid" class="form-control" />
            <span asp-validation-for="CurrentBid" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-lg btn-block">Додати лот</button>
    </form>
</div>

<style>
    .container {
        max-width: 600px;
        margin: auto;
    }

    .btn-block {
        width: 100%;
    }
</style>
