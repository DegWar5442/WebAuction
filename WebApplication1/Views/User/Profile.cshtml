@model WebApplication1.Models.User

<h1 class="display-4">@Model?.UserName</h1>


<dl class="row">
    <dt class="col-sm-2">Пошта</dt>
    <dd class="col-sm-10">@Model?.Email</dd>
    <dt class="col-sm-2">Рейтинг</dt>
    <dd class="col-sm-10">@Model?.Rating</dd>
</dl>

<h2>Історія ставок</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Опис лота</th>
            <th>Ставка</th>
            <th>Час ставки</th>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Bids != null)
            @foreach (var bid in Model.Bids)
            {
                <tr>
                    <td>@bid.Lot.Description</td>
                    <td>@bid.Amount</td>
                    <td>@bid.BidTime.ToString("dd.MM.yyyy HH:mm:ss")</td>
                </tr>
            }
    </tbody>
</table>
